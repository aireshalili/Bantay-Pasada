<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:color="#be2c2e" />
            <gradient android:angle="-90" android:endColor="#be2c2e" android:startColor="#be2c2e" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:color="#a62224" />
            <solid android:color="#a62224" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:color="#a62224" />
            <gradient android:angle="-90" android:endColor="#a62224" android:startColor="#a62224" />
        </shape>
    </item>
</selector>